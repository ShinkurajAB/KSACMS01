@using SwitchCMS.Model
<!-- Logout Confirmation Modal -->
<div id="CreateUser" class="hidden fixed inset-0 bg-black/60 flex items-center justify-center z-40">

    <!-- POPUP -->
    <div id="ModalContaner" class="  popup-animate">
        <div class="no-scrollbar relative w-full max-w-[700px] overflow-y-auto rounded-3xl bg-white p-4 ">
            <!-- close btn -->
            <button @onclick="CloseModal" class="transition-color absolute right-5 top-5 z-999 flex h-11 w-11 items-center justify-center rounded-full bg-gray-100 text-gray-400 hover:bg-gray-200 hover:text-gray-600  ">
                <svg class="fill-current" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M6.04289 16.5418C5.65237 16.9323 5.65237 17.5655 6.04289 17.956C6.43342 18.3465 7.06658 18.3465 7.45711 17.956L11.9987 13.4144L16.5408 17.9565C16.9313 18.347 17.5645 18.347 17.955 17.9565C18.3455 17.566 18.3455 16.9328 17.955 16.5423L13.4129 12.0002L17.955 7.45808C18.3455 7.06756 18.3455 6.43439 17.955 6.04387C17.5645 5.65335 16.9313 5.65335 16.5408 6.04387L11.9987 10.586L7.45711 6.04439C7.06658 5.65386 6.43342 5.65386 6.04289 6.04439C5.65237 6.43491 5.65237 7.06808 6.04289 7.4586L10.5845 12.0002L6.04289 16.5418Z" fill=""></path>
                </svg>
            </button>
            <div class="px-2 pr-14">
                <h4 class="mb-2 text-2xl font-semibold text-gray-800 ">
                    Create or Update User
                </h4>
                <p class="mb-6 text-sm text-gray-500 lg:mb-7">
                    Update user details to keep your profile up-to-date.
                </p>

                
            </div>
            <div class="flex flex-col">
                <div class="custom-scrollbar h-[450px] overflow-y-auto px-2">
                    <div>
                        <h5 class="mb-5 text-lg font-medium text-gray-800  lg:mb-6" style="color:red">
                            @ErroMessage
                        </h5>

                        <div class="grid grid-cols-1 gap-x-6 gap-y-5 lg:grid-cols-2">

                            <div>
                                <label class="mb-1.5 block text-sm font-medium text-gray-700 " for="username">Name</label>
                                <input class=" h-11 w-full appearance-none rounded-lg border border-gray-300 bg-transparent bg-none px-4 py-2.5 text-sm text-gray-800 shadow-theme-xs placeholder:text-gray-400 focus:border-brand-300 focus:outline-hidden focus:ring-3 focus:ring-brand-500/10 " type="text" @bind-value="SelectedUser.Name" id="name" name="name">
                            </div>
                            <div>
                                <label class="mb-1.5 block text-sm font-medium text-gray-700 " for="email">E-mail/ UserName</label>
                                <input class=" h-11 w-full appearance-none rounded-lg border border-gray-300 bg-transparent bg-none px-4 py-2.5 text-sm text-gray-800 shadow-theme-xs placeholder:text-gray-400 focus:border-brand-300 focus:outline-hidden focus:ring-3 focus:ring-brand-500/10 " type="email" @bind-value="SelectedUser.UserName" id="email" name="email">

                                @*  <MudTextField @bind-Value="@SelectedUser.UserName"    Variant="Variant.Outlined" /> *@
                            </div>

                            <AuthorizeView Roles="SuperAdmin">
                                <Authorized>
                                    <div>
                                        <label>Company</label>
                                        
                                        @if (SelectedCompany != null)
                                        {
                                            <CompanyDropdown ParmSelectedCompany="SelectedCompany" SelectedCompanyCallBack="CompanySelection" />


                                        }

                                    </div>
                                </Authorized>
                            </AuthorizeView>
                            <AuthorizeView Roles="SuperAdmin">
                                <Authorized>
                                    @if (SelectedRole == Utility.Roles.CompanyAdmin || SelectedRole == Utility.Roles.SuperAdmin)
                                    {
                                        <div>
                                            <label class="mb-1.5 block text-sm font-medium text-gray-700 " for="password">Password</label>
                                            <input class=" h-11 w-full appearance-none rounded-lg border border-gray-300 bg-transparent bg-none px-4 py-2.5 text-sm text-gray-800 shadow-theme-xs placeholder:text-gray-400 focus:border-brand-300 focus:outline-hidden focus:ring-3 focus:ring-brand-500/10 " type="password" @bind-value="SelectedUser.Password" id="password" name="password" autocomplete="off">
                                        </div>
                                    }
                                </Authorized>
                            </AuthorizeView>


                            <AuthorizeView Roles="CompanyAdmin">
                                <Authorized>
                                    @if (SelectedRole == Utility.Roles.EmployeeUser)
                                    {
                                        <div>
                                            <label class="mb-1.5 block text-sm font-medium text-gray-700 " for="password">Password</label>
                                            <input class=" h-11 w-full appearance-none rounded-lg border border-gray-300 bg-transparent bg-none px-4 py-2.5 text-sm text-gray-800 shadow-theme-xs placeholder:text-gray-400 focus:border-brand-300 focus:outline-hidden focus:ring-3 focus:ring-brand-500/10 " type="password" @bind-value="SelectedUser.Password" id="password" name="password" autocomplete="off">
                                        
                                        </div>
                                    }
                                </Authorized>
                            </AuthorizeView>

                            <div>
                                <label class="mb-1.5 block text-sm font-medium text-gray-700 " for="userrole">User Role</label>

                              
                                <select id="role" @bind="SelectedRole" class=" h-9 w-full appearance-none rounded-lg border border-gray-300 bg-transparent bg-none px-2 py-2 pr-11 text-sm text-gray-800 placeholder:text-gray-400" name="role">

                                    @foreach (var role in Enum.GetValues(typeof(Utility.Roles)).Cast<Utility.Roles>())
                                    {

                                        <AuthorizeView Roles="SuperAdmin">
                                            <Authorized>
                                                @if (role == Utility.Roles.CompanyAdmin || role == Utility.Roles.EmployeeUser || role == Utility.Roles.SuperAdmin)
                                                {
                                                    <option class="text-gray-700" value="@role">@role</option>
                                                }
                                            </Authorized>
                                        </AuthorizeView>
                                        <AuthorizeView Roles="CompanyAdmin">
                                            <Authorized>
                                                @if (role == Utility.Roles.EmployeeUser)
                                                {
                                                    <option class="text-gray-700" value="@role">@role</option>
                                                }
                                            </Authorized>
                                        </AuthorizeView>



                                    }

                                </select>
                            </div>

                            <div>
                                <label class="mb-1.5 block text-sm font-medium text-gray-700 " for="User Status">User Status</label>
                                <select @bind="userStatus" class=" h-9 w-full appearance-none rounded-lg border border-gray-300 bg-transparent bg-none px-2 py-2 pr-11 text-sm text-gray-800 placeholder:text-gray-400">
                                    @foreach (var Status in Enum.GetValues(typeof(Utility.Status)).Cast<Utility.Status>())
                                    {
                                        <option  class="text-gray-700" value="@Status">@Status</option>
                                    }
                                </select>
                            </div>









                          
                        </div>
                    </div>
                    
                            @if (!MenuAssignorNot)
                            {
                                <MudGrid Class="mt-4">
                                    <MudItem xs="12">
                                           @* <label class="block mb-3 text-center">Assign Menu Access</label> *@
                                <MudText Typo="Typo.h6" Class="mb-3 text-center">Assign Menu Access</MudText>
                                    <div class="dual-select">
                                        <MudDropContainer T="OMEN"
                                                          Items="MenuList"
                                                          ItemsSelector="@((item, dropzone) => item.Selector == dropzone)"
                                                          ItemDropped="OnItemDropped"
                                                          Class="d-flex gap-3">
                                            <ChildContent>
                                            <MudDropZone T="OMEN" Identifier="available" Class="rounded main-bg-light-color pa-2 w-100  rounded-md">
                                                    @* <MudText Typo="Typo.h6" Class="mb-4 text-center"></MudText> *@
                                                <label class="block mb-3 text-center">Availiable Menu</label>
                                                </MudDropZone>
                                            <MudDropZone T="OMEN" Identifier="assigned" Class="rounded main-bg-light-color pa-2 w-100 rounded-md">
                                                    @* <MudText Typo="Typo.h6" Class="mb-4">Assigned Menu</MudText> *@
                                                <label class="block mb-3 text-center">Assigned Menu</label>
                                                </MudDropZone>
                                            </ChildContent>
                                            <ItemRenderer>
                                            <MudPaper Elevation="25" Class="pa-4 my-4 text-center">@context.Name</MudPaper>
                                            </ItemRenderer>

                                        </MudDropContainer>

                                    </div>
                                    </MudItem>
                                 
                                </MudGrid>

                            }
                </div>
                <div class="flex items-center gap-3 px-2 mt-6 lg:justify-end">
                    <button @onclick="CloseModal" type="button" class="flex w-full justify-center rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50  sm:w-auto">
                        Close
                    </button>
                    <button type="button" @onclick="CreeateUpdateUser" class="flex w-full justify-center rounded-lg main-bg-dark-color px-4 py-2.5 text-sm font-medium text-white hover:bg-brand-600 sm:w-auto">
                        Save Changes
                    </button>
                </div>
            </div>
        </div>


    </div>

</div>

<AlertMessage ParmMessage="@Message" ParmSucessOrFaild="@SucessOrFaild" />